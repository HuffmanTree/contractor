{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ES2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2022",
    "baseUrl": "./",
    "declaration": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "plugins": [{
      "name": "typescript-eslint-language-service"
    }]
  },
  "include": ["src"],
  "exclude": ["src/__tests__"]
}
